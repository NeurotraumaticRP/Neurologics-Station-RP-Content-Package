              <ParticleEmitter particle="explosionsmoke" particleamount="1" velocitymin="0" velocitymax="0" scalemin="0.2" scalemax="0.4" />
              <ParticleEmitter particle="spark" particleamount="20" velocitymin="500" velocitymax="1500" anglemin="-30" anglemax="30" scalemin="0.25" scalemax="1.0" />
              <Sound file="Content/Items/Jobgear/Mechanic/WEAPON_scrapCannonShot1.ogg" range="3000" type="OnUse" selectionmode="Random" volume="1.6" />
              <Sound file="Content/Items/Jobgear/Mechanic/WEAPON_scrapCannonShot2.ogg" range="3000" type="OnUse" volume="1.6" />
              <Sound file="Content/Items/Jobgear/Mechanic/WEAPON_scrapCannonShot3.ogg" range="3000" type="OnUse" volume="1.6" />
              <StatusEffect type="OnUse">
                <Explosion range="200.0" force="3" shockwave="false" smoke="true" flash="true" sparks="false" flames="false" underwaterbubble="false" camerashake="12.0" />
                <Fire size="10.0" />
              </StatusEffect>
              <StatusEffect type="OnUse" delay="2" target="Character">
                <Sound file="Content/Items/Weapons/WEAPON_rifleReload50-_1.ogg" type="OnUse" range="500" selectionmode="Random" />
                <Sound file="Content/Items/Weapons/WEAPON_rifleReload50-_2.ogg" type="OnUse" range="500" />
              </StatusEffect>
              <StatusEffect type="OnUse" target="Contained" Condition="-10" targetslot="1" disabledeltatime="true" />
              <RequiredItems items="blunderbussammo" type="Contained" msg="itemmsgammorequired" />
              <RequiredItems items="magnesium,flashpowder" type="Contained" msg="itemmsgammorequired" />
              <RequiredSkill identifier="weapons" level="45" />
            </RangedWeapon>
            <ItemContainer capacity="1" maxstacksize="1" slotsperrow="3" hideitems="true" containedstateindicatorslot="1" containedstateindicatorstyle="battery">
              <Containable items="blunderbussammo" />
              <SlotIcon slotindex="1" texture="Content/UI/StatusMonitorUI.png" sourcerect="128,448,64,64" origin="0.5,0.5" />
              <SubContainer capacity="1" maxstacksize="1">
                <Containable items="magnesium,flashpowder" />
              </SubContainer>
            </ItemContainer>
            <aitarget sightrange="1000" soundrange="5000" fadeouttime="5" />
            <Quality>
              <QualityStat stattype="FirepowerMultiplier" value="0.1" />
            </Quality>
            <SkillRequirementHint identifier="weapons" level="35" />
