                  <Affliction identifier="explosiondamage" strength="45" />
                  <Affliction identifier="bleeding" strength="150" />
                  <Affliction identifier="bleeding" strength="30" probability="0.35" dividebylimbcount="false" />
                  <Affliction identifier="stun" strength="8.5" />
                </Explosion>
                <Remove />
              </StatusEffect>
              <StatusEffect type="OnBroken" target="This">
                <sound file="Content/Items/Weapons/ExplosionDebris1.ogg" range="2000" />
                <sound file="Content/Items/Weapons/ExplosionDebris2.ogg" range="2000" />
              </StatusEffect>
              <StatusEffect type="OnImpact" target="This" Condition="-100.0" conditionalcomparison="And">
                <Conditional IsOn="eq True" />
                <Conditional Condition="gt 1" />
                <sound file="Content/Items/Weapons/ExplosionDebris3.ogg" selectionmode="All" range="2000" />
                <ParticleEmitter particle="smoke" anglemin="0" anglemax="360" particleamount="20" velocitymin="500" velocitymax="800" scalemin="0.5" scalemax="0.5" />
                <Explosion range="350.0" ballastfloradamage="50" structuredamage="0" itemdamage="0" force="1.0" severlimbsprobability="0" underwaterbubble="false">
                  <Affliction identifier="burn" strength="25" />
                  <Affliction identifier="stun" strength="0.5" />
                </Explosion>
                <Remove />
              </StatusEffect>
            </LightComponent>
          </Item>
          <!-- Makes crafting more expensive (time and materials),stops the use of phosphorus in the weapon and increases the required skill level -->
          <Item name="Flintlock" identifier="thgflintlock" category="Weapon" cargocontaineridentifier="metalcrate" tags="smallitem,weapon,gun,mountableweapon" Scale="0.55" impactsoundtag="impact_metal_heavy" description="An incredibly archaic weapon, essentially a short barrel with a hammer and a trigger designed to spark stored volatile powder, be it magnesium or flash powder, in order to project loaded shot. It may be a bit dangerous to use from time to time, however...">
            <Deconstruct time="10">
              <Item identifier="iron" />
            </Deconstruct>
            <Fabricate suitablefabricators="fabricator" requiredtime="90" requiresrecipe="false">
                <RequiredSkill identifier="weapons" level="30" />
              <RequiredItem identifier="iron" amount="8" />
            </Fabricate>
            <Sprite texture="%ModDir%/flintlock.png" sourcerect="0,0,76,40" depth="0.55" origin=".52,0.4" />
            <BrokenSprite texture="%ModDir%/flintlock_shoot.png" sourcerect="0,0,76,40" depth="0.55" origin=".52,0.4" />
